// vim: ft=groovy et ts=2 sw=2:
node {
  try {
    stage('Checkout') {
      checkout scm
    }
    stage('Environment') {
      sh 'git --version'
      echo "Branch: ${env.BRANCH_NAME}"
      sh 'docker -v'
      sh 'printenv'
    }

    stage('Deploy'){
      if(env.BRANCH_NAME == 'demo-app'){
        sh 'docker build -t react-app --no-cache .'
      }
    }
  }
  catch (err) {
    throw err
  }
}
